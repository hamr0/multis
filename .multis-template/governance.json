{
  "commands": {
    "allowlist": [
      "ls",
      "pwd",
      "cat",
      "grep",
      "find",
      "head",
      "tail",
      "wc",
      "sort",
      "df",
      "du",
      "ps",
      "uptime",
      "free",
      "who",
      "date",
      "curl",
      "wget",
      "git",
      "npm",
      "node",
      "python",
      "python3",
      "xdg-open",
      "firefox",
      "chromium",
      "playerctl",
      "pactl",
      "wpctl",
      "notify-send",
      "nmcli",
      "brightnessctl",
      "echo",
      "which",
      "env",
      "uname"
    ],
    "denylist": [
      "rm",
      "sudo",
      "dd",
      "mkfs",
      "chmod",
      "chown",
      "kill",
      "killall",
      "shutdown",
      "reboot"
    ],
    "requireConfirmation": [
      "mv",
      "cp",
      "git push",
      "npm publish",
      "git rebase",
      "git reset"
    ]
  },
  "paths": {
    "allowed": [
      "~/Documents",
      "~/Downloads",
      "~/Projects",
      "~/Desktop"
    ],
    "denied": [
      "/etc",
      "/var",
      "/usr",
      "/System",
      "/bin",
      "/sbin"
    ]
  },
  "rateLimits": {
    "messagesPerMinute": 10,
    "commandsPerMinute": 5
  }
}
