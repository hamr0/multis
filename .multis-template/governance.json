{
  "_comment": "Flat allowlist covers Linux, macOS, Windows, Android. Unused commands on wrong OS are harmless.",
  "commands": {
    "allowlist": [
      "ls", "dir", "pwd", "cat", "type", "head", "tail", "wc",
      "sort", "grep", "find", "echo", "which", "where", "env",
      "set", "uname", "whoami", "hostname", "date",
      "df", "du", "ps", "uptime", "free", "who", "top",
      "vm_stat", "sysctl", "pmset", "upower",
      "systeminfo", "wmic", "tasklist",
      "curl", "wget", "ping", "nslookup", "dig",
      "nmcli", "networksetup", "airport",
      "netsh", "ipconfig",
      "git", "npm", "node", "python", "python3", "pip", "pip3",
      "xdg-open", "firefox", "chromium", "google-chrome",
      "open", "start", "explorer",
      "playerctl", "pactl", "wpctl", "osascript",
      "notify-send",
      "xclip", "xsel", "wl-copy", "wl-paste",
      "pbcopy", "pbpaste", "clip",
      "gnome-screenshot", "grim", "scrot", "screencapture", "snippingtool",
      "brightnessctl", "brightness",
      "termux-open-url", "termux-notification",
      "termux-clipboard-set", "termux-clipboard-get",
      "termux-battery-status",
      "termux-telephony-call", "termux-sms-send", "termux-sms-list",
      "termux-contact-list", "termux-location", "termux-camera-photo",
      "termux-tts-speak", "termux-torch", "termux-vibrate", "termux-volume"
    ],
    "denylist": [
      "rm", "rmdir", "del", "rd",
      "sudo", "su", "runas",
      "dd", "mkfs", "format", "diskpart",
      "chmod", "chown", "icacls",
      "kill", "killall", "taskkill",
      "shutdown", "reboot", "halt"
    ],
    "requireConfirmation": [
      "mv", "cp", "move", "copy", "xcopy", "robocopy",
      "powershell",
      "git push", "git rebase", "git reset",
      "npm publish"
    ]
  },
  "paths": {
    "allowed": [
      "~/Documents",
      "~/Downloads",
      "~/Projects",
      "~/Desktop"
    ],
    "denied": [
      "/etc", "/var", "/usr", "/System", "/bin", "/sbin",
      "C:\\Windows", "C:\\Program Files"
    ]
  },
  "rateLimits": {
    "messagesPerMinute": 10,
    "commandsPerMinute": 5
  }
}
